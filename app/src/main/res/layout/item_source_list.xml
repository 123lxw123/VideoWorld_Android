<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/com_wm_bg">
    <FrameLayout
        android:id="@+id/fl_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_picture"
            android:scaleType="fitXY"
            android:background="@color/color_E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="?attr/color_bg_gray"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingRight="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5">

            <LinearLayout
                android:id="@+id/ll_imdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_imdb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/com_assist_A"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(IMDB)"
                    android:textColor="?attr/com_assist_A"
                    android:textSize="@dimen/sp_6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_douban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_douban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/com_assist_A"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(豆  瓣)"
                    android:textColor="?attr/com_assist_A"
                    android:textSize="@dimen/sp_6" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
    <TextView
        android:id="@+id/txt_title"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/sp_14"
        android:textColor="?attr/com_font_A"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
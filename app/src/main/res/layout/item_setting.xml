<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:layout_marginTop="@dimen/dp_0.5"
    android:background="@drawable/selector_item_bg"
    android:paddingEnd="@dimen/dp_15"
    android:paddingStart="@dimen/dp_15">

    <TextView
        android:id="@+id/txt_key"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/txt_download_manager"
        android:textColor="?attr/com_font_A"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/txt_value"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:text="@string/txt_download_manager"
        android:textColor="?attr/com_font_A"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/img_go_to"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:src="@drawable/svg_go_to" />

    <Switch
        android:id="@+id/switch_allow_4G"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

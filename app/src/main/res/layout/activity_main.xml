<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/com_main_A"
        app:popupTheme="@style/OverflowMenuStyle"
        app:title="@string/app_name" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/com_wm_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/color_FFE791"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_notice"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="?attr/com_font_A"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/ic_close" />

            </LinearLayout>

            <com.lxw.videoworld.framework.widget.NoScrollViewPager
                android:id="@+id/viewpager_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigationbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:itemBackground="?attr/com_main_A"
                app:itemIconTint="@color/color_FFFFFF"
                app:itemTextColor="@color/color_FFFFFF"
                app:menu="@menu/bootom_nav" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/color_FFFFFF">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/com_wm_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_change_theme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@drawable/selector_item_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingStart="@dimen/dp_15">

                        <TextView
                            android:id="@+id/txt_change_theme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/menu_change_theme"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@color/com_main_A_gold" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@color/com_main_A_red" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@color/com_main_A_blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@color/color_FFFFFF"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_allow_4G"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="切换至4G网络时暂停下载"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />

                        <Switch
                            android:id="@+id/switch_allow_4G"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15" />

                        <View
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_QQ"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@drawable/selector_item_bg"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/txt_QQ"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/txt_QQ"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:text="126257036"
                            android:gravity="center_vertical"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_version"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@drawable/selector_item_bg"
                        android:layout_width="match_parent">

                        <TextView
                            android:layout_weight="1"
                            android:text="@string/txt_version"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/txt_version"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />

                        <View
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_clear_cache"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@drawable/selector_item_bg"
                        android:layout_width="match_parent">

                        <TextView
                            android:layout_weight="1"
                            android:text="@string/txt_clear_cache"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/txt_cache"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:textColor="?attr/com_font_A"
                            android:textSize="@dimen/sp_16" />

                        <View
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_download_path"
                        android:background="@drawable/selector_item_bg"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:text="@string/txt_download_path"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="?attr/com_font_A"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/txt_download_path_value"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@drawable/selector_item_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="?attr/com_font_C"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txt_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@drawable/selector_item_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/txt_feedback"
                        android:textColor="?attr/com_font_A"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/txt_about"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@drawable/selector_item_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/txt_about"
                        android:textColor="?attr/com_font_A"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:id="@+id/ll_about_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_0.5"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_github"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:background="@drawable/selector_item_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="GitHub\nhttps://github.com/123lxw123"
                            android:textColor="?attr/com_font_C"
                            android:textSize="@dimen/sp_16"
                            android:visibility="visible" />

                        <View
                            android:background="?attr/com_wm_bg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0.5"/>

                        <TextView
                            android:id="@+id/txt_about_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_50"
                            android:paddingBottom="@dimen/dp_8"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="@dimen/dp_8"
                            android:textColor="?attr/com_font_C"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>

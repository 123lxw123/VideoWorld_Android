<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="RedAppTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/com_wm_bg_red</item>
        <item name="com_wm_bg">@color/com_wm_bg_red</item>
        <item name="com_space_line">@color/com_space_line_red</item>
        <item name="com_main_A">@color/com_main_A_red</item>
        <item name="com_main_B">@color/com_main_B_red</item>
        <item name="com_assist_A">@color/com_assist_A_red</item>
        <item name="com_assist_B">@color/com_assist_B_red</item>
        <item name="com_font_A">@color/com_font_A_red</item>
        <item name="com_font_B">@color/com_font_B_red</item>
        <item name="com_font_C">@color/com_font_C_red</item>
        <item name="com_font_D">@color/com_font_D_red</item>
        <item name="com_dialog_bg">@color/com_dialog_bg_red</item>
        <item name="color_BBE6DE">@color/color_BBE6DE_red</item>
        <item name="color_16B998">@color/color_16B998_red</item>
    </style>
    <style name="BlueAppTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/com_wm_bg_blue</item>
        <item name="com_wm_bg">@color/com_wm_bg_blue</item>
        <item name="com_space_line">@color/com_space_line_blue</item>
        <item name="com_main_A">@color/com_main_A_blue</item>
        <item name="com_main_B">@color/com_main_B_blue</item>
        <item name="com_assist_A">@color/com_assist_A_blue</item>
        <item name="com_assist_B">@color/com_assist_B_blue</item>
        <item name="com_font_A">@color/com_font_A_blue</item>
        <item name="com_font_B">@color/com_font_B_blue</item>
        <item name="com_font_C">@color/com_font_C_blue</item>
        <item name="com_font_D">@color/com_font_D_blue</item>
        <item name="com_dialog_bg">@color/com_dialog_bg_blue</item>
        <item name="color_BBE6DE">@color/color_BBE6DE_blue</item>
        <item name="color_16B998">@color/color_16B998_blue</item>
    </style>
    <style name="GoldAppTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/com_wm_bg_gold</item>
        <item name="com_wm_bg">@color/com_wm_bg_gold</item>
        <item name="com_space_line">@color/com_space_line_gold</item>
        <item name="com_main_A">@color/com_main_A_gold</item>
        <item name="com_main_B">@color/com_main_B_gold</item>
        <item name="com_assist_A">@color/com_assist_A_gold</item>
        <item name="com_assist_B">@color/com_assist_B_gold</item>
        <item name="com_font_A">@color/com_font_A_gold</item>
        <item name="com_font_B">@color/com_font_B_gold</item>
        <item name="com_font_C">@color/com_font_C_gold</item>
        <item name="com_font_D">@color/com_font_D_gold</item>
        <item name="com_dialog_bg">@color/com_dialog_bg_gold</item>
        <item name="color_BBE6DE">@color/color_BBE6DE_gold</item>
        <item name="color_16B998">@color/color_16B998_gold</item>
    </style>

    <!--透明 dialog-->
    <style name="TransDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!-- 内容区域背景透明 -->
        <item name="android:backgroundDimEnabled">false</item><!--背景不模糊-->
    </style>

    <!-- 分割线高度，颜色 -->
    <style name="split_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?attr/com_space_line</item>
    </style>

    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@android:color/white</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
</resources>
